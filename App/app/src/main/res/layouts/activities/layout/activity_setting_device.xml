<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingDeviceActivity">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvsetting"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="setting key"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/on_off"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvsetting"
            android:text="text"
            android:textStyle="italic"/>
        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/toggle_widget_background"
            android:button="@null"
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_speech"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_add_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_keyboard_voice_black_24dp" />

    </RelativeLayout>



</LinearLayout>