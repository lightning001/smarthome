<div style="width:120px; display:inline-grid;  margin:0px;<%if(device.status==false){%>background:gray;<%}else{%>background:orange;<%}%>" id="device_<%=device._id%>" >
	<div class="thumbnail opacity-background" style="width:100%; text-align:center; margin-bottom: 0px;">
		<i class="fa fa-times-circle text-red" style="float:right"  onclick="delete_device('<%=device._id%>', '<%=device.device_name%>')"></i>
		<figcaption class="text-center" style="height:25px;" onclick="editDevice(this)" >
		<%=device.device_name%> </figcaption>
		<input type="text" style="font-size: 12px; display:none; width:100%"  maxlength="25" onchange="submitEditDevice('<%=device._id%>',this)" value="<%=device.device_name%>">
		<img src="<%=device.device.img%>" style="width:100%; margin-bottom:10px;" onclick="control_device('<%=device._id%>')" class="img img-circle <%if(device.status==false){%> item-off<%}%>">
		<label class="switch" onclick="control_device('<%=device._id%>')">
			<input type="checkbox" <%if(device.status==true){%>checked<%}%>>
			<span class="slider round"></span>
		</label>
	</div>
</div>