<!DOCTYPE html">
<html>

<head>
	<% include ./partials/head %>
		<link rel="stylesheet" href="/css/home.css">
		<title>Home</title>
</head>

<body>
	<% include ./partials/header %>
		<div class="space-medium">
			<div class="container main">
				<div class="jumbotron">
					<div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
							<% if(req.session.authentication != true || req.session.user ==null){%>
								<!--login-form-->
								<% include login%>
									<%}else{
						var listRoom = req.session.user.listRoom;
						listRoom.forEach(function(room){ %>

										<a>
											<div class="col-lg-4 col-md-4 col-sm-4 cl-xs-12">
												<div class="panel panel-default">
													<div class="panel-body"><img src="<%=room.img%>" alt="room" class="img img-responsive"></div>
													<div class="panel-footer">
														<%=room.room_name%>
													</div>
												</div>
											</div>
										</a>

										<% });}%>


						</div>
					</div>
				</div>
			</div>
		</div>
		<% include ./partials/footer %>
</body>

</html>
