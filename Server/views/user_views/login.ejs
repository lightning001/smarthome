<div class="account-holder">
	<h3>Login to Smart Home</h3>
	<br>
	<div class="social-btn">
		<h6>Sign in With</h6>
		<div class="fb-btn">
			<i class="fa fa-facebook-official"></i><a href="#" class="fb-btn-text">facebook</a>
		</div>
		<div class="google-btn">
			<i class="fa fa-google"></i><a href="#" class="google-btn-text">Google</a>
		</div>
	</div>
	<div class="row">
		<form method="POST" action="/user/login" id="formLogin">
			<div class="col-lg-12 col-md-12 col-sm-6 col-xs-12 sr-only" id="formLoginError">
			</div>
			<div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
				<div class="form-group">
					<label class="control-label">Email<sup style="color: red">*</sup></label>
					<input id="email" type="email" class="form-control" placeholder="Enter Email Address" name="email">
				</div>
			</div>
			<div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
				<div class="form-group">
					<label class="control-label">Password<sup style="color: red">*</sup></label>
					<input id="password" name="password" type="password" class="form-control" placeholder="Password">
				</div>
				<a href="#" class="forgot-password">Forgot Password?</a>
			</div>
			<div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
				<input type="submit" class="btn btn-primary btn-block" value="Sign in" />
				<div class="checkbox">
					<label><input type="checkbox" name="remember">Remember login</label>
				</div>
			</div>
		</form>
	</div>
</div>

<script>
	$("#formLogin").validate({
		rules: {
			email: {
				require: true,
				minlength: 5
			},
			password: {
				require: false,
				minlength: 6
			}
		},
		messages: {
			email: {
				require: "Please enter your email",
				minlength: "Please enter valid email"
			},
			password: {
				require: "Please enter your password",
				minlength: "Password must be 6 - 28 chars and not contains special characters"
			}
		}
	});
	$('#formLogin').submit(function() {
		var form = $("#formLogin");
		$.ajax({
			type: form.attr("method"),
			url: form.attr("action"),
			data: $("#formLogin").serialize(),
			success: function(data) {
				alert(data.msg);
			},
			error: function(err) {
				$("#formLoginError").show();
				$("#formLoginError").append(err.message);
				$("#formLoginError").removeClass("sr-only").addClass("alert alert-danger");
			}
		});
	});
	$("#email").focus(function(){
		$("#formLoginError").hide();
	});
	$("#password").focus(function(){
		$("#formLoginError").hide();
	});

</script>
